// Firebase Storage Security Rules for Disaster Delivery App
// Copy this to Firebase Console -> Storage -> Rules tab

rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Delivery person profile images
    match /profile_images/{userId} {
      // Read: Anyone can read for disaster identification
      allow read: if true;
      
      // Write: Only authenticated users can upload their own images
      allow write: if request.auth != null && 
                      request.auth.uid == userId &&
                      // File size limit 5MB
                      request.resource.size < 5 * 1024 * 1024 &&
                      // Only image files allowed
                      request.resource.contentType.matches('image/.*');
    }
    
    // Emergency delivery proof photos (future expansion)
    match /delivery_proof/{requestId}/{filename} {
      // Read: Only authenticated users
      allow read: if request.auth != null;
      
      // Write: Only authenticated delivery persons
      allow write: if request.auth != null &&
                      request.resource.size < 10 * 1024 * 1024 &&
                      request.resource.contentType.matches('image/.*');
    }
    
    // All other files: Denied
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}